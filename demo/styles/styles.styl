@import variables

/*
 * Demo Styles
 */

h1
  font-size 55px

section
  margin 20px auto
  text-align center
  border 2px solid
  border-radius(15px)
  padding 15px
  min-width 550px

.electric-label
  margin 5px auto
  text-align center

.electric-slide
  margin 15px auto
  width 500px
  height 20px
  background #eee
  box-shadow(inset 1px 1px 6px)
  box-sizing(border-box)

  .handle
    width 30px
    height 30px
    background #fff
    border 1px solid #000
    position absolute
    margin-top -5px
    box-sizing(border-box)
    transition(all .5s)

.tip
  text-align center
  margin-top 15px
